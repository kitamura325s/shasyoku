<!DOCTYPE html>
<html>
<head>
  <title>kitastagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<header>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
    
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			<ul class="nav navbar-nav">
			  
			  
        <% if user_signed_in? %>
          <li><%= link_to cafeterias_path do %><i class="fa fa-building fa-fw fa-2x"></i><% end %></li>
          <li><%= link_to pictures_path do %><i class="fa fa-cutlery fa-fw fa-2x"></i><% end %></li>
          <li><%= link_to edit_user_registration_path do %><i class="fa fa-user-o fa-fw fa-2x"></i><% end %></li>
          <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa fa-sign-out fa-fw fa-2x"></i><% end %></li>
        <% else %>
          <li><%= link_to new_user_session_path do %><i class="fa fa-sign-in fa-fw fa-2x"></i><% end %></li>
          <li><%= link_to new_user_registration_path do %><i class="fa fa-user-plus fa-fw fa-2x"></i><% end %></li>
        <% end %>
      </ul>
    </div>
  </div><!-- /.container-fluid -->
</nav>

</header>

<body>
<%= yield %>
</body>

</html>