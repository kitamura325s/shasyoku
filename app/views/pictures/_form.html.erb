<%= form_for(@picture) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h1><%= @picture.cafeteria.company_name %>の口コミを投稿する</h1>

  <div class="form-group">
	  <label class="col-sm-2 control-label"><%= f.label :タイトル %></label>
	  <div class="col-sm-10">
		  <%= f.text_field :title, class: 'form-control' %>
	  </div>
  </div>

  <div class="form-group">
	  <label class="col-sm-2 control-label"><%= f.label :メニュー %></label>
	  <div class="col-sm-10">
		  <%= f.text_area :menu, class: 'form-control' %>
	  </div>
  </div>

  <div class="form-group">
	  <label class="col-sm-2 control-label"><%= f.label :感想 %></label>
	  <div class="col-sm-10">
		  <%= f.text_area :content, class: 'form-control' %>
	  </div>
  </div>

  <div class="form-group">
	  <label class="col-sm-2 control-label"><%= f.label :値段 %></label>
	  <div class="col-sm-10">
		  <%= f.text_field :price, class: 'form-control' %>
	  </div>
  </div>

  <label class="col-sm-2 control-label"><%= f.label :写真 %></label>
  <div class="field">
    <%= picture_img(@picture) if picture_img(@picture) %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>

  <%= f.hidden_field :cafeteria_id %>

  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to "×", pictures_path , class: 'close' %>